@import "commons.css";
@import "font.css";
@import "button.css";

:root {
    --header-height: 6vh;
}

html, body {
    background-color: var(--color-primary);
}

input {
    border: 1px solid var(--color-light);
    background-color: var(--color-light);
    outline: none;

    font-size: 1em;
}

#message {
    margin: 0;
    padding: 2px 4px;
    font-weight: bold;
}

#dialog-server-addr {
    top: 25vh;
    background-color: inherit;
    border: 1px solid var(--color-light);
    color: var(--color-light);
    width: 15vw;
}

#dialog-server-addr > * {
    width: 100%;
    font-size: .8vw;
}

#dialog-server-addr > .form > input {
    width: calc(100% - 6px);
}

#dialog-server-addr > .buttons-container {
    margin-top: 1vh;
    width: 100%;
}

#dialog-server-addr > .buttons-container > * {
    float: right;
    margin-right: 5px;
    font-size: .8vw;
}

#dialog-server-addr > .buttons-container > :first-child {
    float: right;
    margin-right: 0;
}

#connected-server {
    border: 1px solid var(--color-light);
    border-radius: 25px;
    padding: 10px 10px;
    font-size: .7vw;
    text-align: center;
    cursor: pointer;
}

.header {
    margin: 1vh 1vw;
    height: var(--header-height);
}

article.main {
    margin-top: calc(var(--header-height) + 2vh);
    display: flex;
    height: 100%;
}

section.left {
    width: 15vw;
}

section.right {
    width: 83vw;
    min-height: 90vh;
    border: 1px solid var(--color-light);
    border-radius: 25px;
}

#site-nav {
    margin-top: 10vh;
    list-style: none;
}

#site-nav > li {
    margin-top: 15px;
    font-size: 2vw;
    font-weight: bold;
    transition: 500ms;
    cursor: pointer;
}

#site-nav > li:hover {
    transition: 500ms;
    margin-left: 30px;
}